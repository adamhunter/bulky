!!!5
%html
  %head
    %title Bulky Updates
    = stylesheet_link_tag "bulky/application", :media => "all" 
    = javascript_include_tag "bulky/application"
    = csrf_meta_tags
  %body#wrapper.bulky-body
    #content
      #content-left
        %nav#sidebar
          .bulky-navbar-inner
            = link_to "Bulky", '#', id: "logo"
          %ul.bulky-nav
            %li
              = link_to "Home", root_path
            %li
              = link_to "Index", bulky_index_path
              
          .flash-msg
            .flash-notice= notice
            .flash-alert= alert
      #content-main
        .bulky-container
          = yield

      
        
    


